


<%= form_for(@article, :html => {:multipart => true}) do |f| %>
<% if @article.errors.any?%>
  <h2>Errors:</h2>
  <ul>
    <% @article.errors.full_messages.each do |message|%>
    <li><%=message%>
</li>
<%end%>
    </ul
    <%end%>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

   
    <p>
    <% if @article.image_file_name %>
        <%= image_tag @article.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </p>


  <p>
    <%= f.submit "save" %>


  

<% end %>
